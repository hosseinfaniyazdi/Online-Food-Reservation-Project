@model IEnumerable<cmsyasix.Data.Entities.Food.FoodGroup>
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var group in Model.Where(g => g.ParentId == null))
                {
                    <li>
                        <a href="/food?selectedgroups=@group.GroupId"> @group.GroupTitle </a>
                        @if (Model.Any(g => g.ParentId == group.GroupId))
                        {
                            <ul>
                                @foreach (var sub in Model.Where(g => g.ParentId == group.GroupId))
                                {
                                    <li><a href="/food?selectedgroups=@sub.GroupId"> @sub.GroupTitle </a></li>
                                }
                            </ul>
                        }
                    </li>
                }

            </ul>
        </nav>
    </div>
</div>